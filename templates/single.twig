{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper container-fluid">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="page-header">
				<h1 class="article-h1">{{post.title}}</h1>
				<p class="blog-author">
					<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}
				</p>
				<ul>
					{% for term in post.terms('categories') %}
					<li><a href="{{term.link}}">{{term.name}}</a></li>
					{% endfor %}
				</ul>
			</section>
			<section class="article-body">
				{% if post.thumbnail %}
				<div class="pull-right post-img">
					<img src="{{post.thumbnail.src}}">
					<div class="caption">{{post.thumbnail.caption}}</div>
				</div>
				{% endif %}
				{{post.content}}
			</section>

<!--
